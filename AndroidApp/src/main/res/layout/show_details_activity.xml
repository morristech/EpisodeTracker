<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    <RelativeLayout
        android:id="@+id/add_button_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_button_layout_height"
        android:layout_gravity="bottom"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingVertical="10dp"
            android:drawableLeft="@drawable/ic_add"
            android:drawableTint="@color/add_button_icon_tint"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:fontFamily="sans-serif-medium"
            android:text="@string/action_add_to_my_shows"
            tools:ignore="RtlHardcoded"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            />
        <ProgressBar
            android:id="@+id/add_button_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignLeft="@id/add_button"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:indeterminate="true"
            android:indeterminateTint="?attr/colorOnPrimary"
            android:elevation="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="RtlHardcoded"
            />
    </RelativeLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="48dp"
            app:contentScrim="@color/toolbarColor"
            app:expandedTitleGravity="bottom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:expandedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Expanded"
            app:collapsedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Collapsed"
            >

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/top_bottom_gradient_scrim"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                />
            <LinearLayout
                android:id="@+id/subtitle_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                >
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:textAppearance="@style/TextAppearance.App.CollapsingToolbar.Subtitle"
                    tools:text="2007 - 2019 â€¢ Netflix"
                    />
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.App.CollapsingToolbar.Subtitle"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    tools:text="TV-MA"
                    />
            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/windowBackground"
            android:foreground="@color/dividerColor"
            />

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
