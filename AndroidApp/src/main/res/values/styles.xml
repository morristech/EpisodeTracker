<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">@bool/is_in_night_mode</item>

        <item name="badgeStyle">@style/Badge</item>

        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>

        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="Badge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/badgeColor</item>
        <item name="badgeTextColor">@color/badgeTextColor</item>
    </style>

    <style name="BackgroundMessageText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    </style>

    <style name="PreferenceGroup" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="PreferenceTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="PreferenceSubtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="SmallCardTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="SmallCardSubtitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/cardSubtitleColor</item>
    </style>

    <style name="SectionTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SwipeAction" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableTint">?attr/colorOnPrimarySurface</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
    </style>

    <style name="DialogPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/alertColor</item>
    </style>

</resources>
