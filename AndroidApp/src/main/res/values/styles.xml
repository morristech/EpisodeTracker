<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

        <item name="android:navigationBarColor">@color/bottomNavigationBackground</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.ShowCardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>
    <style name="AppTheme.ShowCardSubtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="AppTheme.ShowItemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="AppTheme.ShowItemSubtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ShowOverview" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="BackgroundMessageText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        
    </style>

    <style name="PreferenceGroup" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="PreferenceTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="PreferenceSubtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
